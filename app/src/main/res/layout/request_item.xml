<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/titleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Name"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/titleName"
            android:layout_alignParentTop="true"
            android:text="Ritik Rawat"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/titleAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/name"
            android:text="Address"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/titleAddress"
            android:layout_below="@+id/name"
            android:text="E 578 D pratap vihar"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/titleCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/address"
            android:text="City"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/titleCity"
            android:layout_below="@+id/address"
            android:text="Ghaziabad"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/titleZipcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/city"
            android:text="Zipcode"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/zipcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/titleZipcode"
            android:layout_below="@+id/city"
            android:text="201070"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/titlenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/titleZipcode"
            android:text="Mobile Number"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/mobileNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/titlenumber"
            android:layout_below="@+id/zipcode"
            android:text="99678354627"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/titledate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/titlenumber"
            android:text="Date"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/titledate"
            android:layout_below="@+id/mobileNumber"
            android:text="12/09/2000"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/titleTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/date"
            android:text="Time"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/titleTime"
            android:layout_below="@+id/date"
            android:text="08:45"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>